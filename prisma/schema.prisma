generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  SUPERADMIN
}

model User {
  id        String    @id @default(uuid())
  name      String    @db.VarChar(100)
  email     String    @unique @db.VarChar(255)
  password  String    @db.VarChar(255) 
  role      Role      @default(ADMIN)
  telp      Int  
  token     String?   @db.VarChar(100)     
  //profile   String?
  //testimoni Testimoni[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("users")
}

model Bidang_Usaha {
  id_BUsaha        String    @id @default(uuid())
  nama_BUsaha      String    @db.VarChar(225)
  deskripsi        String?   @db.Text

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Testimoni {
  id            String    @id @default(uuid())
  nama          String    @unique @db.VarChar(100)
  foto          String
  pesan_testi   String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
//  id_users      String
//  users         User     @relation(fields: [id_users], references: [id], onDelete: SetNull)
}
