generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  SUPERADMIN
}

model User {
  id        String    @id @default(uuid())
  name      String    @db.VarChar(100)
  email     String    @unique @db.VarChar(255)
  password  String    @db.VarChar(255) 
  role      Role      @default(ADMIN)
  telp      String    @db.VarChar(15)
  token     String?   @db.VarChar(100)  

  testimonies Testimoni[]
  Gallery     Gallery[]   

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([email])
  @@index([name])
  @@map("users")
}

model Bidang_Usaha {
  id_BUsaha        String    @id @default(uuid())
  nama_BUsaha      String    @unique @db.VarChar(225)
  deskripsi        String?   @db.Text
  poto             String?   @db.Text

  jenis_usaha   Jenis_Usaha[] 

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Jenis_Usaha {
  id            String    @id @default(uuid())
  nama_jenis    String    @db.VarChar(250)
  deskripsi     String
  foto          String
  status        String

  bidangUsahaId String
  bidang_usaha  Bidang_Usaha @relation(fields: [bidangUsahaId], references: [id_BUsaha], onDelete: Cascade)

  detail_jbu    Detail_JBU[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Detail_JBU {
  id    String      @id @default(uuid())
  nama  String      @db.VarChar(250)

  jenisUsahaId      String
  jenis_usaha       Jenis_Usaha       @relation(fields: [jenisUsahaId], references: [id], onDelete: Cascade)

  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}

model Testimoni {
  id            String    @id @default(uuid())
  nama          String    @unique @db.VarChar(100)
  foto          String
  pesan_testi   String

  userId        String
  user          User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Gallery {
  id        String      @id @default(uuid())
  image     String
  
  id_users  String
  users     User        @relation(fields: [id_users], references: [id], onDelete: Cascade)

  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  @@map("gallery")
}

model Partners {
  id              String    @id @default(uuid())
  nama_partner    String    @unique @db.VarChar(250)
  deskripsi       String
  logo            String

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([nama_partner])
}

model Pesan{
  id_pesan       String    @id @default(uuid())
  name_pesan     String    @db.VarChar(100)
  email_pesan    String    @db.VarChar(255)
  pesan_isi      String
  layanan_pesan  String    @db.VarChar(255)
  
  createdAt      DateTime  @default(now())
}